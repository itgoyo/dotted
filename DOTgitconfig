# vim: ft=gitconfig
[user]
    email = momocraft@gmail.com
    name  = "Wang Guan"
[color]
    branch      = auto
    diff        = auto
    interactive = auto
    status      = auto
[alias]
    lg    = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)- %an%C(reset)'
    co    = checkout
    cm    = commit -e
    r     = checkout --
    unadd = reset HEAD
    d     = difftool
    mp    = !"foo () { git format-patch -C -M --stdout --attach \"$@\" | git imap-send ; } ; foo"
    klean = clean -x -d -f  # remove all non-tracked and ignored files
    txz   = !"foo () { if [ -n \"$1\" ]; then treeish=\"$1\" ; else treeish=HEAD; fi; git archive \"$treeish\" | xz -9 ; } ; foo "
    m     = merge --no-ff
    b     = branch -avv
    s     = status -sb
    gca   = gc --aggressive
    diff-word = diff --color-words --minimal
    diff-char = diff --color-words=. --minimal

[core]
    whitespace = trailing-space,space-before-tab
    abbrev = 6
    editor = "vim"
    quotepath = false

[apply]
    whitespace = fix
[diff]
    tool = gvimdiff
[difftool]
    prompt = false
